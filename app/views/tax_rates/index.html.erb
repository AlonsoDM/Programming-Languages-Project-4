<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Tax Rates</h1>
  <%= link_to "New Tax Rate", new_tax_rate_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Rate (%)</th>
            <th>Description</th>
            <th>Status</th>
            <th>Products Using</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tax_rates.each do |tax_rate| %>
            <tr>
              <td><%= link_to tax_rate.name, tax_rate_path(tax_rate) %></td>
              <td><%= tax_rate.rate %>%</td>
              <td><%= tax_rate.description || 'N/A' %></td>
              <td>
                <span class="badge bg-<%= tax_rate.active? ? 'success' : 'secondary' %>">
                  <%= tax_rate.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td><%= tax_rate.products.count %></td>
              <td>
                <%= link_to "View", tax_rate_path(tax_rate), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_tax_rate_path(tax_rate), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Delete", tax_rate_path(tax_rate), method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          confirm: "Are you sure?",
                          data: { turbo_method: :delete } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- app/views/tax_rates/show.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @tax_rate.name %></h1>
  <div>
    <%= link_to "Edit", edit_tax_rate_path(@tax_rate), class: "btn btn-primary" %>
    <%= link_to "Back", tax_rates_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <!-- Tax Rate Details -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Tax Rate Information</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Name:</dt>
          <dd class="col-sm-8"><%= @tax_rate.name %></dd>

          <dt class="col-sm-4">Rate:</dt>
          <dd class="col-sm-8"><%= @tax_rate.rate %>%</dd>

          <dt class="col-sm-4">Description:</dt>
          <dd class="col-sm-8"><%= @tax_rate.description || 'N/A' %></dd>

          <dt class="col-sm-4">Status:</dt>
          <dd class="col-sm-8">
            <span class="badge bg-<%= @tax_rate.active? ? 'success' : 'secondary' %>">
              <%= @tax_rate.active? ? 'Active' : 'Inactive' %>
            </span>
          </dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <!-- Products Using This Tax Rate -->
    <div class="card">
      <div class="card-header">
        <h5>Products Using This Tax Rate</h5>
      </div>
      <div class="card-body">
        <% if @products.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>SKU</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr>
                    <td><%= link_to product.name, product_path(product) %></td>
                    <td><%= product.sku %></td>
                    <td>$<%= sprintf('%.2f', product.price) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @tax_rate.products.count > 10 %>
            <p class="text-muted">Showing 10 of <%= @tax_rate.products.count %> products.</p>
          <% end %>
        <% else %>
          <p class="text-muted">No products are using this tax rate.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
