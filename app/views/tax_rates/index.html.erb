<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Tax Rates</h1>
  <%= link_to "New Tax Rate", new_tax_rate_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Rate (%)</th>
            <th>Description</th>
            <th>Status</th>
            <th>Products Using</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tax_rates.each do |tax_rate| %>
            <tr>
              <td><%= link_to tax_rate.name, tax_rate_path(tax_rate) %></td>
              <td><%= tax_rate.rate %>%</td>
              <td><%= tax_rate.description || 'N/A' %></td>
              <td>
                <span class="badge bg-<%= tax_rate.active? ? 'success' : 'secondary' %>">
                  <%= tax_rate.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td><%= tax_rate.products.count %></td>
              <td>
                <%= link_to "View", tax_rate_path(tax_rate), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_tax_rate_path(tax_rate), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Delete", tax_rate_path(tax_rate), method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          confirm: "Are you sure?",
                          data: { turbo_method: :delete } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
