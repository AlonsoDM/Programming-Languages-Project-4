<%= form_with model: tax_rate, local: true do |form| %>
  <% if tax_rate.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(tax_rate.errors.count, "error") %> prohibited this tax rate from being saved:</h4>
      <ul class="mb-0">
        <% tax_rate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
        <div class="form-text">e.g., VAT, Sales Tax, GST</div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :rate, "Rate (%)", class: "form-label" %>
        <div class="input-group">
          <%= form.number_field :rate, step: 0.01, min: 0, class: "form-control" %>
          <span class="input-group-text">%</span>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
    <div class="form-text">Optional description of when this tax rate applies</div>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", tax_rates_path, class: "btn btn-secondary" %>
  </div>
<% end %>
